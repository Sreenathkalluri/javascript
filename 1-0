        //discount to calculate= 20% if exp>100 and 10% if exp<100 and >50 and if cust=premium member discount extra 5%
        let status=prompt("are you a premium member?(yes/no)")
        let exp=parseInt(prompt("Enter the amount of money you have spent"))
        if(exp>=100){
            if(status.toLowerCase()=="yes"){
                discount=0.25*exp
                alert("discount="+discount)
            }
            else{
                discount=0.20*exp
                alert("discount="+discount)
            }
        }
        if(exp<100 && exp>=50){
            if(status.toLowerCase()=="yes"){
                discount=0.15*exp
                alert("discount=",discount)
            }
            else{
                discount=0.10*exp
                alert("discount=",discount)
            }
        }
